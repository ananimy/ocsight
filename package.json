{
  "name": "ocsight",
  "version": "0.7.12",
  "description": "OpenCode ecosystem observability platform",
  "type": "module",
  "main": "index.js",
  "bin": {
    "ocsight": "index.js"
  },
  "packageManager": "bun@1.2.19",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "bundle-cli": "turbo bundle-cli && mkdir -p lib && cp packages/cli/dist/index.cjs lib/bundle.cjs",
    "test": "turbo test",
    "package": "turbo package",
    "clean": "turbo clean",
    "prepack": "turbo build"
  },
  "keywords": [
    "opencode",
    "observability",
    "analytics",
    "cli",
    "mcp"
  ],
  "author": "OpenCode",
  "license": "MIT",
  "files": [
    "index.js",
    "lib/",
    "README.md"
  ],
  "devDependencies": {
    "@types/node": "^20.0.0",
    "bun-types": "latest",
    "turbo": "^2.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@heyhuynhgiabuu/ocsight-cli": "^0.7.8",
    "@modelcontextprotocol/sdk": "^1.18.0"
  }
}
