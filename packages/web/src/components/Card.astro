---
export interface Props {
  title: string;
  icon: string;
  class?: string;
}

const { title, icon, class: className = '' } = Astro.props;

const base = 'flex flex-col gap-3 rounded-sm border border-border bg-background px-6 py-8 text-left shadow-brutal transition-transform hover:-translate-y-1 hover:shadow-md';
---

<div data-slot="card" class={`${base} ${className}`}>
  <span class="text-3xl">{icon}</span>
  <h3 class="text-xl font-semibold text-foreground">{title}</h3>
  <div class="text-muted-foreground"><slot /></div>
</div>
