---
export interface Props {
  type?: 'text' | 'email' | 'password' | 'number'
  placeholder?: string
  disabled?: boolean
  class?: string
  id?: string
  name?: string
  required?: boolean
}

const { type = 'text', placeholder = '', disabled = false, class: className = '', id, name, required } = Astro.props
---

<input
  data-slot="input"
  type={type}
  placeholder={placeholder}
  disabled={disabled}
  class={className}
  id={id}
  name={name}
  required={required}
/>