{
  "branches": ["main"],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    "@semantic-release/changelog",
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "bun run build && ./build.sh ${nextRelease.version}"
      }
    ],
    [
      "@semantic-release/npm",
      {
        "npmPublish": true
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [{ "path": "dist/*" }]
      }
    ],
    [
      "@semantic-release/exec",
      {
        "successCmd": "sed -i.bak 's/version \".*\"/version \"${nextRelease.version}\"/' homebrew-tap-files/Formula/ocsight.rb && rm -f homebrew-tap-files/Formula/ocsight.rb.bak"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "CHANGELOG.md",
          "package.json",
          "homebrew-tap-files/Formula/ocsight.rb"
        ]
      }
    ]
  ]
}
