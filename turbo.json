{
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "lib/**"]
    },
    "bundle-cli": {
      "dependsOn": ["build"],
      "outputs": ["dist-bundle/**", "lib/**", "packages/cli/dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["build"]
    },
    "package": {
      "dependsOn": ["bundle-cli"],
      "outputs": ["dist-bundle/**"]
    },
    "clean": {
      "cache": false
    }
  }
}
